<%- include('includes/head.ejs') %>

    <div class="container-fluid">

        <div id="loadingBuffering" class="d-none"></div>

        <div class="row m-3" id="test">
            <div class="col-md-3 col-lg-4"></div>

            <div class="col-12 col-md-6 col-lg-4">

                <div class="card">
                    <img src="../images/nasa-logo.gif" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="text-center"><b>Please Login or Sign Up</b></h5>
                        <div class="text-danger text-center" id="noLongerAccess">
                            <%=error_msg_to_user%>
                        </div>

                        <form id="loginForm" action="/" method="post">
                            <label for="emailInput">Email address</label>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <span class="material-icons">local_post_office</span>
                                        </span>
                                    </div>
                                    <input type="text" id="emailInput" name="emailInput" class="form-control"
                                        placeholder="example@email.com">
                                </div>
                                <div class="text-danger errormessage"></div>
                            </div>

                            <label for="emailInput">Password</label>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <span class="material-icons">vpn_key</span>
                                        </span>
                                    </div>
                                    <input type="password" id="passwordInput" name="passwordInput" class="form-control"
                                        placeholder="Password">
                                </div>
                                <div class="text-danger errormessage"></div>
                            </div>

                            <div class="text-center">
                                <button id="loginBtb" name="loginBtb" type="submit"
                                    class="btn btn-primary m-3">Login</button>
                            </div>
                        </form>

                        <div>
                            <p class="text-center">Don't have an account?
                                <a href="/register">Sign Up</a>

                            </p>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-md-3 col-lg-4"></div>
        </div>
        <!--custom modal-->
        <div class="modal" tabindex="-1" id="errorModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Oops!</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p id="errorModalText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('includes/end.ejs') %>